<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CartActivity"
    android:background="@color/colorGrey">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorToolbar"
        android:textStyle="bold"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <!--<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_cart">-->

        <RelativeLayout
            android:id="@+id/main_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_cart">

            <ScrollView
                android:layout_above="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvcart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_cart"
                        android:visibility="gone"
                        android:textSize="@dimen/_24ssp"
                        android:textColor="@color/colorBlack"
                        android:textStyle="bold"
                        android:layout_margin="@dimen/_10sdp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_cart"
                        android:layout_below="@id/tvcart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"/>

                    <View
                        android:id="@+id/view"
                        android:layout_below="@id/recycler_cart"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/colorGrey1"
                        android:visibility="gone"
                        android:layout_margin="@dimen/_10sdp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:id="@+id/relcoupon_card"
                        android:layout_below="@+id/recycler_cart"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        app:cardBackgroundColor="@color/colorWhite">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:id="@+id/relcoupon"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                >
                                <LinearLayout
                                    android:id="@+id/linearcoupon"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:weightSum="1">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/ic_disc_coupon" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="0.8"
                                        android:text="@string/applycoupon"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="@dimen/_14ssp"
                                        android:textStyle="bold" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/ic_next" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linearcode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:visibility="gone"
                                    android:weightSum="1">

                                    <ImageView
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/ic_discount" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="0.8"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/txtcoupon"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/applycoupon"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="20sp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Offer Applied on the bill" />

                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/img_cancel"
                                        android:layout_width="@dimen/_20sdp"
                                        android:layout_height="@dimen/_20sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/ic_close" />

                                </LinearLayout>
                            </RelativeLayout>
                            <View
                                android:id="@+id/view2"
                                android:layout_below="@id/relcoupon_card"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/colorGreyDark"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_margin="@dimen/_10sdp"/>
                            <RelativeLayout
                                android:id="@+id/bottom_sheet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/view2">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:weightSum="1">

                                    <ImageView
                                        android:id="@+id/location_icon"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/ic_locate" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:layout_weight="0.8">

                                        <TextView
                                            android:id="@+id/del_label"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_weight="0.8"
                                            android:text="@string/set_up_your_delivery_location"
                                            android:textColor="@color/colorBlack"
                                            android:textSize="@dimen/_14ssp"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/deliveraddress"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="left"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="10dp"
                                            android:layout_weight="0.8"
                                            android:text="@string/location"
                                            android:textColor="@color/colorGreyDark"
                                            android:textSize="@dimen/_12ssp"
                                            android:textStyle="bold" />

                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/edit_address"
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.1"
                                        android:src="@drawable/ic_pencil" />

                                </LinearLayout>

                            </RelativeLayout>
                            <View
                                android:id="@+id/view1"
                                android:layout_below="@id/bottom_sheet"
                                android:layout_width="match_parent"
                                android:background="@color/colorGreyDark"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:layout_margin="@dimen/_10sdp"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_8sdp"
                                android:orientation="horizontal"
                                android:background="@drawable/login_edittext_background"
                                android:id="@+id/select_slot_btn"
                                android:gravity="center"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Select delivery slot"
                                    android:textAllCaps="false"
                                    android:id="@+id/slot_text"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="@dimen/_15sdp"
                                    android:padding="@dimen/_10sdp"
                                    />
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                                    android:layout_gravity="center"/>
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linearwallet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/relcoupon_card"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:weightSum="1">

                        <CheckBox
                            android:id="@+id/checkWallet"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_gravity="center"
                            android:buttonTint="@color/colorBlack"
                            android:layout_weight="0.08" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.7"
                            android:text="@string/wallet"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.22"
                            android:gravity="right"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_16ssp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view3"
                        android:layout_below="@id/linearwallet"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_margin="@dimen/_10sdp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_8sdp"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_below="@id/view3"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_8sdp"
                        app:cardBackgroundColor="@color/colorWhite">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/sub_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:visibility="visible"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:text="@string/sub_price"/>

                                <TextView
                                    android:id="@+id/tvSubPrice"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:gravity="end"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/delivery_layout"
                                android:layout_below="@id/sub_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:visibility="visible"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:text="@string/delivery"/>

                                <TextView
                                    android:id="@+id/tvDelivery"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:gravity="end"/>

                            </LinearLayout>
                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/wallet"
                                android:layout_below="@id/delivery_layout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:textSize="@dimen/_16ssp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:text="@string/wallet"/>

                                <TextView
                                    android:id="@+id/tvWallet"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/_16ssp"
                                    android:textColor="@color/colorGreyDark"
                                    android:textStyle="bold"
                                    android:gravity="end"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/discount"
                                android:layout_below="@id/wallet"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:text="@string/discount"/>

                                <TextView
                                    android:id="@+id/txtDiscAmt"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="@dimen/_14ssp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:gravity="end"/>

                            </LinearLayout>
                            <View
                                android:id="@+id/total_view"
                                android:layout_below="@id/discount"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:background="@color/colorGreyDark"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp"
                                />
                            <LinearLayout
                                android:id="@+id/total_layout"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_below="@id/total_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:orientation="horizontal"
                                android:weightSum="4"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_marginRight="@dimen/_10sdp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.8"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:text="@string/total"/>

                                <TextView
                                    android:id="@+id/tvTotal"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.2"
                                    android:textSize="20sp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:gravity="end"/>

                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </ScrollView>

            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_above="@id/tvTermsCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp">

                <TextView
                    android:id="@+id/btnShopping"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:text="@string/continue_shopping"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:background="@drawable/login_button"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginRight="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/btnCheckout"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_weight="1"
                    android:text="@string/checkout"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12ssp"
                    android:background="@drawable/login_button"
                    android:backgroundTint="@color/colorGreyDark"
                    android:layout_marginLeft="@dimen/_5sdp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvTermsCart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:gravity="center"
                android:textSize="@dimen/_8ssp"
                android:layout_alignParentBottom="true"
                android:text="@string/terms_cart"/>

        </RelativeLayout>

    <!--</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>-->

    <LinearLayout
        android:id="@+id/tvNodata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/no_item"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:lottie_autoPlay="true"
            android:layout_gravity="center"
            app:lottie_fileName="empty.json"
            app:lottie_loop="true"
            app:lottie_scale="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_items_cart"
            android:textSize="@dimen/_16ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/colorRed"/>

    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loader"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        app:lottie_autoPlay="true"
        android:layout_centerInParent="true"
        app:lottie_fileName="loading_app.json"
        app:lottie_loop="true"
        app:lottie_scale="0.5" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/progress_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        app:indicatorColor="@color/colorAccent"
        app:indicatorName="BallSpinFadeLoaderIndicator"
        android:visibility="gone"/>

</RelativeLayout>